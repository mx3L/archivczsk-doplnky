<?xml version="1.2.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.orangetv"
       name="OrangeTV"
       version="1.3"
       provider-name="Michal Novotný, Štěpán Ort">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.dmd-czech.common" version="1.5.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>OrangeTV live plugin</summary>
    <description>Plugin to play live videos from orange.sk</description>
    <description lang="cs">Plugin pro přehrávání živých videí z orange.sk</description>
    <description lang="sk">Plugin pre prehrávanie živých videí z orange.sk</description>
  </extension>
</addon>
